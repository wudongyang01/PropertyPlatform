<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_title" >

    <RelativeLayout
        android:id="@+id/fmi_rl_top"
        android:layout_width="match_parent"
        android:layout_height="200dip"
       >

        <TextView
            android:id="@+id/ai_tv_title"
            style="@style/Text.Large.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:gravity="center_horizontal"
            android:text="@string/me" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ai_iv_head"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/ai_tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:src="@drawable/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <Button
            android:id="@+id/ai_btn_login"
            style="@style/Text.Large.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ai_iv_head"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:gravity="center_horizontal"
            android:text="登录" />

        <RelativeLayout
            android:id="@+id/fmi_rl_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ai_iv_head"
            android:layout_marginTop="20dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/zw"
                android:layout_width="1dip"
                android:layout_height="15dip"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fmi_tv_nick"
                style="@style/Text.Large.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/zw"
                android:gravity="center_horizontal"
                android:text="" />

            <TextView
                android:id="@+id/fmi_tv_phone"
                style="@style/Text.Large.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/zw"
                android:gravity="center_horizontal"
                android:text=""
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fmi_rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_title"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fmi_rl_check"
                android:layout_width="match_parent"
                android:layout_height="50dip"
               >

                <ImageView
                    android:id="@+id/fmi_iv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:src="@mipmap/ic_set"

                    />

                <TextView
                    style="@style/Text.Large1.darkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/fmi_iv_0"
                    android:text="个人信息" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dip"
                    android:src="@mipmap/ic_right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stoke_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmi_rl_card"
                android:layout_width="match_parent"
                android:layout_height="50dip"
               >

                <ImageView
                    android:id="@+id/fmi_iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:src="@mipmap/ic_about" />

                <TextView
                    style="@style/Text.Large1.darkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/fmi_iv_1"
                    android:text="我的收藏" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dip"
                    android:src="@mipmap/ic_right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stoke_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fmi_rl_com"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                >

                <ImageView
                    android:id="@+id/fmi_iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:src="@mipmap/ic_about" />

                <TextView
                    style="@style/Text.Large1.darkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/fmi_iv_2"
                    android:text="关于" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dip"
                    android:src="@mipmap/ic_right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stoke_light" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fmi_rl_set"
                android:layout_width="match_parent"
                android:layout_height="50dip"
               >

                <ImageView
                    android:id="@+id/fmi_iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:src="@mipmap/ic_set" />

                <TextView
                    style="@style/Text.Large1.darkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/fmi_iv_4"
                    android:text="设置" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dip"
                    android:src="@mipmap/ic_right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stoke_light" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>